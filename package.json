{
  "name": "portafolio",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:github": "ng build --base-href=/",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "deploy": "pnpm run build:github && pnpm dlx angular-cli-ghpages --dir=dist/portafolio/browser --no-silent",
    "analyze": "ng build --configuration production --stats-json && pnpm dlx webpack-bundle-analyzer dist/portafolio/browser/stats.json",
    "lighthouse": "ng build --configuration production && pnpm dlx lighthouse http://localhost:4000 --view",
    "prepare": "husky",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless --code-coverage",
    "husky:pre-commit": "pnpm run lint-staged",
    "husky:commit-msg": ".husky/commit-msg",
    "husky:pre-push": ".husky/pre-push",
    "ci:husky-checks": "echo 'üîç Running Husky checks...' && (pnpm run husky:pre-commit || echo '‚ö†Ô∏è  Husky pre-commit check failed but continuing...') && echo '‚úÖ Husky checks completed'",
    "lint-staged": "lint-staged",
    "update:angular": "ng update @angular/core @angular/cli",
    "update:deps": "pnpm update"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.1.6",
    "@angular/common": "^20.1.6",
    "@angular/compiler": "^20.1.6",
    "@angular/core": "^20.1.6",
    "@angular/forms": "^20.1.6",
    "@angular/localize": "^20.1.6",
    "@angular/platform-browser": "^20.1.6",
    "@angular/platform-browser-dynamic": "^20.1.6",
    "@angular/router": "^20.1.6",
    "@fortawesome/angular-fontawesome": "^3.0.0",
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/free-regular-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@ngrx/effects": "^20.0.0",
    "@ngrx/store": "^20.0.0",
    "@ngrx/store-devtools": "^20.0.0",
    "chart.js": "^4.5.0",
    "jw-bootstrap-switch-ng2": "^2.0.5",
    "ngx-bootstrap": "^20.0.0",
    "ngx-ui-switch": "^16.1.0",
    "nouislider": "^15.8.1",
    "rxjs": "~7.8.2",
    "sass-migrator": "^2.4.2",
    "sliders": "^2.0.6",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.1.5",
    "@angular/cli": "^20.1.5",
    "@angular/compiler-cli": "^20.1.5",
    "@types/jasmine": "~5.1.8",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "angular-cli-ghpages": "^2.0.3",
    "husky": "^9.1.7",
    "jasmine-core": "~5.1.2",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3"
  },
  "packageManager": "pnpm@10.15.1",
  "overrides": {
    "@fortawesome/angular-fontawesome": {
      "@angular/core": "^20.1.6",
      "@angular/common": "^20.1.6"
    },
    "ngx-bootstrap": {
      "@angular/animations": "^20.1.6",
      "@angular/common": "^20.1.6",
      "@angular/core": "^20.1.6"
    },
    "@ngrx/store-devtools": {
      "@angular/core": "^20.1.6"
    }
  },
  "lint-staged": {
    "*.{ts,js,html}": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  }
}
