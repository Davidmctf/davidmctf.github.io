# Seguridad: Prevenir ejecución de scripts durante install
ignore-scripts=true

# pnpm 10.16+: Retraso de instalación de paquetes nuevos
# Espera 24 horas (1440 min) antes de instalar versiones recién publicadas
minimum-release-age=1440

# Configuraciones adicionales
auto-install-peers=true
strict-peer-dependencies=false
shamefully-hoist=true
